<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Previous Rent Payments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="container py-5">
    <h2 class="mb-4">Previous Rent Payments</h2>

    <div class="card shadow-sm">
      <div class="card-body">
        <h4 class="card-title">Previous Rent Payments</h4>

        <!-- Begin Payments Table -->
        <% if (payments.length > 0) { %>
          <div class="table-responsive mt-3">
            <table class="table table-bordered table-hover">
              <thead class="table-light">
                <tr>
                  <th>#</th>
                  <th>Amount Paid (₹)</th>
                  <th>Payment Date</th>
                  <th>Remarks</th>
                  <th>Invoice</th>
                </tr>
              </thead>
              <tbody>
                <% payments.forEach((payment, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td>₹<%= payment.amountPaid %></td>
                    <td><%= new Date(payment.paymentDate).toLocaleDateString() %></td>
                    <td><%= payment.remarks || '-' %></td>
                    <td>
                      <% if (payment.invoiceFile) { %>
                        <a href="/<%= payment.invoiceFile %>" target="_blank" class="btn btn-sm btn-outline-primary">
                          Download Invoice
                        </a>
                      <% } else { %>
                        <span class="text-muted">Not Available</span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted mt-3">No payments recorded yet.</p>
        <% } %>
        <!-- End Payments Table -->

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
